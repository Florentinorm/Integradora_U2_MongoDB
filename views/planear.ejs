<% include partials/head %>
    <% include partials/navbar %>

        <style>
            body {
                background-image: linear-gradient(-200deg, rgb(11, 119, 138) 60%, white 60%);
            }
        </style>
        <br>
        <!-- titulo  -->
        <section id="titulo">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <h1 style="color: #FFC312;">Planear Curso
                        </h1>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <% for(var i=0; i < Parcial.length; i++) { %>
                <div class="container">
                    <div class="row">
                      <div class="col-sm">
                        <div style="background: rgba(0, 0, 0, 0.52); border-radius: 15px;">
                            <h1 style="color: white;">&nbsp;Parcial <%= Parcial[i].NumeroParcial %></h1>
                           
                                <% for(var j=0; j < Tema.length; j++){ %>
                                    <% if(Tema[j].CvParcial==Parcial[i].NumeroParcial){ %>
                                        <div style="background: gray; border-radius: 10px; margin: 10px;">
                                        <h3 style="color: white; border-block-end: 1px solid rgba(0, 0, 0, 0.363);">&nbsp;&nbsp;<a href="/editT/<%= Tema[j]._id %>">Tema: <%= Tema[j].NombreTema %> </a></h3>
                                        <div>
                                            <% for(var a=0; a < Actividad.length; a++){ %>
                                                <div style=" display: flex; align-items: center;justify-content: center;">
                                                    <div style=" width: 80%;"> <br>
                                                        <% if (Actividad[a].Tipo == 'Infografia' || Actividad[a].Tipo == 'Practica') { %>
                                                            <div class="container">
                                                                <div class="row">
                                                                    <div class="col-sm">
                                                                        <svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" fill="currentColor" class="bi bi-file-earmark-text"
                                                                            viewBox="0 0 16 16">
                                                                            <path
                                                                                d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z" />
                                                                            <path
                                                                                d="M9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.5L9.5 0zm0 1v2A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5z" />
                                                                        </svg><br>
                                                                    </div>
                                                                    <div class="col-sm">
                                                                        <h4 style="color: white;">Nombre: <%= Actividad[a].Nombre %></h4>
                                                                        <h5><b>Tipo:</b> <%= Actividad[a].Tipo %></h5>
                                                                        <h5><b>Descripción:</b> <%= Actividad[a].Descripcion %></h5>
                                                                        <div style="text-align: center;">
                                                                            <button type="button" class="btn btn-info"><a href="/editC/<%= Actividad[a]._id %>">Planear Actividad</a></button>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-sm">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        <% } else if (Actividad[a].Tipo == 'Video') { %>
                                                            <div class="container">
                                                                <div class="row">
                                                                  <div class="col-sm">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width=300" height="200" fill="currentColor" class="bi bi-file-earmark-play"
                                                                        viewBox="0 0 16 16">
                                                                        <path d="M6 6.883v4.234a.5.5 0 0 0 .757.429l3.528-2.117a.5.5 0 0 0 0-.858L6.757 6.454a.5.5 0 0 0-.757.43z" />
                                                                        <path
                                                                            d="M14 14V4.5L9.5 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2zM9.5 3A1.5 1.5 0 0 0 11 4.5h2V14a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h5.5v2z" />
                                                                    </svg><br>
                                                                  </div>
                                                                  <div class="col-sm">
                                                                    <h4 style="color: white;">Nombre: <%= Actividad[a].Nombre %>
                                                                    </h4>
                                                                    <h5><b>Tipo:</b> <%= Actividad[a].Tipo %>
                                                                    </h5>
                                                                    <h5><b>Descripción:</b> <%= Actividad[a].Descripcion %>
                                                                    </h5>
                                                                    <div style="text-align: center;">
                                                                        <button type="button" class="btn btn-info"><a href="/editC/<%= Actividad[a]._id %>">Planear Actividad</a></button>
                                                                    </div>
                                                                  </div>
                                                                  <div class="col-sm">
                                                                  </div>
                                                                </div>
                                                              </div>
                                                        <% } else { %>
                                                            <div class="container">
                                                                <div class="row">
                                                                  <div class="col-sm">
                                                                    <svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" fill="currentColor" class="bi bi-file-earmark-minus" viewBox="0 0 16 16">
                                                                        <path d="M5.5 9a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H6a.5.5 0 0 1-.5-.5z"/>
                                                                        <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"/>
                                                                    </svg> <br>
                                                                  </div>
                                                                  <div class="col-sm">
                                                                    <h4 style="color: white;">Nombre: <%= Actividad[a].Nombre %></h4>
                                                                    <h5><b>Tipo:</b> <%= Actividad[a].Tipo %></h5>
                                                                    <h5><b>Descripción:</b> <%= Actividad[a].Descripcion %></h5>
                                                                    <div style="text-align: center;">
                                                                        <button type="button" class="btn btn-info"><a href="/editC/<%= Actividad[a]._id %>">Planear Actividad</a></button>
                                                                    </div>
                                                                  </div>
                                                                  <div class="col-sm">
                                                                  </div>
                                                                </div>
                                                              </div>
                                                        <% } %>
                                                        <br>
                                                        
                                                    </div>
                                                </div>
                                            <% } %>
                                            <div style=" display: flex; align-items: center;justify-content: center;">
                                                <div style=" width: 80%;">
                                                    <% for(var e=0; e < Examen.length; e++){ %>
                                                        <div class="container">
                                                            <div class="row">
                                                              <div class="col-sm">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="300" height="200" fill="currentColor" class="bi bi-journal-text"
                                                                    viewBox="0 0 16 16">
                                                                    <path
                                                                        d="M5 10.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z" />
                                                                    <path
                                                                        d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z" />
                                                                    <path
                                                                        d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z" />
                                                                </svg>
                                                              </div>
                                                              <div class="col-sm">
                                                                <h4 style="color: white;">Examen del tema</h4>
                                                                <h5><b>Ponderación:</b> <%= Examen[e].Ponderacion %></h5>
                                                                <h5><b>Cantidad de intentos:</b> <%= Examen[e].Intentos %></h5>
                                                                <div style="text-align: center;">
                                                                    <button type="button" class="btn btn-info"><a href="/editE/<%= Examen[e]._id %>">Planear Examen</a></button>
                                                                </div>
                                                              </div>
                                                              <div class="col-sm">
                                                              </div>
                                                            </div>
                                                          </div> <br>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        </div>
                                     <% } %>
                                <% } %>
                                <br>
                            </div>
                        </div>
                      </div>
                    </div>
                  </div>
                

            <% } %>
        </section>

        <% include partials/footer %>